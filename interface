<body class="flex flex-col items-center justify-start min-h-screen p-4">

    <!-- Всплывающее сообщение о статусе (например, "Недостаточно энергии") --><div id="message-container" class="fixed top-0 left-0 w-full flex justify-center z-50 pointer-events-none p-4 opacity-0 transition-opacity duration-300">
        <div id="status-message" class="text-white px-4 py-2 rounded-lg shadow-xl font-aldrich text-sm">
            <!-- Сообщение будет вставлено здесь JS --></div>
    </div>

    <!-- HEADER / ТОП ПАНЕЛЬ (для кнопки Настроек) --><div class="w-full max-w-lg flex justify-end absolute top-4 right-0 p-4 z-20">
        <!-- Кнопка Настроек (Шестеренка) --><button class="text-gray-400 hover:text-white transition" onclick="console.log('Настройки открыты!')">
            <i class="fa-solid fa-gear text-3xl" style="text-shadow: 0 0 10px rgba(138, 43, 226, 0.5);"></i>
        </button>
    </div>

    <!-- Главный контейнер WebApp --><div id="app-container" class="w-full max-w-lg pt-8 pb-20 space-y-8 flex flex-col items-center">

        <!-- Секция счета --><div class="flex flex-col items-center space-y-1 mt-10"> 
            <span class="text-xl font-light text-gray-300 font-aldrich">Ваши Звезды</span>
            <!-- Счетчик теперь использует Aldrich и усиленное свечение --><span id="score" class="text-6xl sm:text-7xl font-bold text-yellow-400 font-aldrich" style="text-shadow: 0 0 15px #FFD700, 0 0 30px rgba(255, 215, 0, 0.6);">0</span>
            
            <!-- НОВЫЙ БЛОК "Клик" - неоновый чип под счетом --><div class="flex items-center space-x-2 text-md font-aldrich text-gray-300 mt-2 p-1 px-3 rounded-full ui-element">
                <i class="fa-solid fa-hand-pointer text-yellow-400 text-lg"></i>
                <span>Клик x<span id="click-value-display">1</span></span>
            </div>
        </div>
        
        <!-- Секция Energy (теперь занимает всю ширину) --><div class="w-full flex justify-center mt-6">
            
            <!-- Блок "Энергия" --><div class="w-full flex flex-col items-center space-y-2 max-w-xs">
                <!-- Отображение чисел энергии --><div class="flex items-center space-x-2 text-xl font-semibold font-aldrich">
                    <i class="fa-solid fa-bolt text-yellow-400 text-2xl"></i>
                    <span id="energy-count">6,000</span>
                    <span class="text-gray-400">/</span>
                    <span class="text-gray-400">6,000</span>
                </div>
                
                <!-- Полоса энергии --><div class="w-full h-3 bg-white/20 rounded-full overflow-hidden border border-white/30">
                    <div id="energy-bar-fill" class="h-full" style="width: 100%;"></div>
                </div>
            </div>
        </div>


        <!-- Центральный элемент: Звезда (Область для клика) -->
        <div class="relative flex items-center justify-center w-full h-auto mt-6 mb-6" id="click-area">
            
            <!-- НОВЫЙ ЭЛЕМЕНТ: Неоновое ядро, пульсирующее под звездой -->
            <div id="neon-core"></div>
            
            <!-- Более четкий, контрастный фон для звезды --><div class="p-8 rounded-full bg-white/5 border border-yellow-500/30 shadow-2xl shadow-yellow-500/30 z-0">
                <img src="telegram_star.png" onerror="this.onerror=null; this.src='https://placehold.co/256x256/1F003C/ffffff?text=Star+Placeholder'" alt="Telegram Star" id="star" class="w-48 h-48 object-contain">
            </div>
        </div>

        <!-- Секция игровых карточек/кнопок --><div class="w-full grid grid-cols-3 gap-3 text-center">
            
            <!-- Карточка "Frens" --><button class="col-span-1 ui-element p-3 flex flex-col items-center justify-center rounded-xl">
                <i class="fa-solid fa-user-group text-3xl mb-1 text-blue-300" style="text-shadow: 0 0 5px #60a5fa;"></i>
                <span class="text-xs font-medium text-gray-300 font-aldrich">Друзья</span>
            </button>

            <!-- Карточка "Earn" --><button class="col-span-1 ui-element p-3 flex flex-col items-center justify-center rounded-xl">
                <i class="fa-solid fa-sack-dollar text-3xl mb-1 text-green-300" style="text-shadow: 0 0 5px #34d399;"></i>
                <span class="text-xs font-medium text-gray-300 font-aldrich">Задания</span>
            </button>

            <!-- Карточка "Boosts" --><button class="col-span-1 ui-element p-3 flex flex-col items-center justify-center rounded-xl">
                <i class="fa-solid fa-rocket text-3xl mb-1 text-red-300" style="text-shadow: 0 0 5px #f87171;"></i>
                <span class="text-xs font-medium text-gray-300 font-aldrich">Бусты</span>
            </button>
        </div>
        
    </div>

    <script>
        // Глобальные переменные для кликера
        let score = 0;
        let energy = 6000;
        const maxEnergy = 6000;
        const clickValue = 1; // Теперь это переменная, которую можно увеличить бустами

        const scoreElement = document.getElementById('score');
        const energyElement = document.getElementById('energy-count');
        const starElement = document.getElementById('star');
        const clickArea = document.getElementById('click-area');
        const energyBarFill = document.getElementById('energy-bar-fill');
        const clickValueDisplay = document.getElementById('click-value-display');
        
        // Элементы для вывода системных сообщений
        const messageContainer = document.getElementById('message-container');
        const statusMessage = document.getElementById('status-message');


        /**
         * Показывает временное сообщение о статусе на экране.
         * @param {string} message - Сообщение для отображения.
         * @param {number} duration - Время отображения в миллисекундах.
         */
        function showStatusMessage(message, duration = 1500) {
            statusMessage.textContent = message;
            // Убеждаемся, что контейнер виден
            messageContainer.classList.remove('opacity-0');
            messageContainer.classList.add('opacity-100');

            // Скрываем его через заданное время
            setTimeout(() => {
                messageContainer.classList.remove('opacity-100');
                messageContainer.classList.add('opacity-0');
            }, duration);
        }

        // Обновление полосы энергии
        function updateEnergyBar() {
            const percent = (energy / maxEnergy) * 100;
            energyBarFill.style.width = `${percent}%`;
            energyElement.textContent = energy.toLocaleString('ru-RU');
        }

        // Обновление значения клика
        function updateClickValueDisplay() {
            clickValueDisplay.textContent = clickValue.toLocaleString('ru-RU');
        }

        // Инициализация Telegram WebApp API
        const WebApp = window.Telegram.WebApp;
        if (WebApp) {
            WebApp.ready();
            // Устанавливаем фиолетовый фон в Telegram
            WebApp.setHeaderColor('#0A001F'); 
            WebApp.setBackgroundColor('#0A001F');
            WebApp.expand(); 
            // Отправка данных боту при закрытии WebApp
            WebApp.onEvent('close', () => {
                const finalData = { 
                    total_score: score, 
                    energy_left: energy,
                    click_power: clickValue
                };
                WebApp.sendData(JSON.stringify(finalData));
            });
        }

        // Функция для создания плавающих очков
        function createFloatingScore(x, y) {
            const scoreDisplay = document.createElement('div');
            scoreDisplay.textContent = `+${clickValue}`;
            scoreDisplay.classList.add('floating-score');
            
            // Определяем координаты клика относительно контейнера клика
            const rect = clickArea.getBoundingClientRect();
            scoreDisplay.style.left = `${x - rect.left}px`;
            scoreDisplay.style.top = `${y - rect.top}px`;
            
            clickArea.appendChild(scoreDisplay);

            // Удаляем элемент после завершения анимации
            setTimeout(() => {
                scoreDisplay.remove();
            }, 1000);
        }

        // Обработчик клика/тапа по звезде
        function handleStarClick(event) {
            // *** Безопасное извлечение координат для сенсорных и мышиных событий ***
            const touch = event.touches ? event.touches[0] : null;
            const clientX = touch ? touch.clientX : event.clientX;
            const clientY = touch ? touch.clientY : event.clientY;
            // ******************************************************************************

            if (energy < clickValue) { // Проверяем, достаточно ли энергии для клика
                
                // ВЫВОДИМ СООБЩЕНИЕ ПОЛЬЗОВАТЕЛЮ, ЧТО ЭНЕРГИЯ ЗАКОНЧИЛАСЬ
                showStatusMessage("Недостаточно энергии!");

                // Визуальный сигнал, что энергия закончилась
                starElement.style.filter = 'drop-shadow(0 0 5px red)';
                setTimeout(() => {
                    starElement.style.filter = 'drop-shadow(0 0 25px var(--color-secondary))';
                }, 300);
                return; // Останавливаем выполнение функции, если клик невозможен
            }

            // 1. Анимация звезды
            starElement.classList.add('clicked');
            setTimeout(() => {
                starElement.classList.remove('clicked');
            }, 100);

            // 2. Обновление счета и энергии
            score += clickValue;
            energy -= clickValue; 
            
            if (energy < 0) energy = 0; // На всякий случай

            scoreElement.textContent = score.toLocaleString('ru-RU');
            updateEnergyBar();

            // 3. Плавающие очки
            createFloatingScore(clientX, clientY);

            // 4. Оповещение Telegram
            if (WebApp.HapticFeedback) {
                WebApp.HapticFeedback.impactOccurred('light');
            }
        }
        
        // Восстановление энергии с течением времени
        setInterval(() => {
            if (energy < maxEnergy) {
                energy += 10; // Восстанавливаем 10 энергии каждую секунду
                if (energy > maxEnergy) energy = maxEnergy;
                updateEnergyBar();
            }
        }, 1000); 

        // Добавляем обработчик для тапа (сенсор) и клика (мышь)
        starElement.addEventListener('click', handleStarClick);
        starElement.addEventListener('touchstart', (e) => {
            e.preventDefault(); 
            handleStarClick(e);
        });

        // Начальное обновление UI
        updateEnergyBar();
        updateClickValueDisplay();
    </script>

</body>
</html>
