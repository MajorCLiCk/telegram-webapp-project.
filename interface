        /* Анимация пульсирующего неонового ядра */
        @keyframes pulseNeon {
            0% { 
                box-shadow: 0 0 10px var(--color-primary), 0 0 20px var(--color-primary), 0 0 30px rgba(138, 43, 226, 0.4); 
                opacity: 0.6; 
                transform: scale(0.95);
            }
            50% { 
                box-shadow: 0 0 30px var(--color-primary), 0 0 60px var(--color-primary), 0 0 90px rgba(138, 43, 226, 0.8); 
                opacity: 1; 
                transform: scale(1.05);
            }
            100% { 
                box-shadow: 0 0 10px var(--color-primary), 0 0 20px var(--color-primary), 0 0 30px rgba(138, 43, 226, 0.4); 
                opacity: 0.6; 
                transform: scale(0.95);
            }
        }

        /* Основные стили: Глубокий темный фон с простым градиентом */
        body {
            font-family: var(--font-main);
            background-color: var(--tg-theme-bg-color, var(--color-background-dark)); 
            color: var(--tg-theme-text-color, #ffffff);
            /* Централизованный, чистый радиальный градиент */
            background-image: radial-gradient(circle at center, #1f003c 0%, var(--color-background-dark) 100%);
            touch-action: manipulation; 
            overflow: hidden; 
        }

        /* Стиль для неонового ядра за звездой */
        #neon-core {
            position: absolute;
            width: 300px; /* Большой размер для максимализма */
            height: 300px;
            border-radius: 50%;
            background: rgba(138, 43, 226, 0.2); /* Полупрозрачный фиолетовый */
            animation: pulseNeon 5s ease-in-out infinite;
            z-index: -1; /* Помещаем за звезду */
        }


        /* Стиль для четких, контрастных карточек */
        .ui-element {
            background-color: var(--color-dark-element); 
            border: 1px solid rgba(138, 43, 226, 0.7); 
            box-shadow: 0 0 15px rgba(138, 43, 226, 0.5); 
            backdrop-filter: blur(5px); 
            transition: all 0.2s;
        }
        .ui-element:active {
            transform: scale(0.98);
            box-shadow: 0 0 5px var(--color-primary);
        }

        /* Стиль для центральной звезды */
        #star {
            transform: scale(1);
            transition: transform 0.1s ease-out;
            cursor: pointer;
            user-select: none;
            /* Усиленное золотое/желтое свечение звезды */
            filter: drop-shadow(0 0 25px var(--color-secondary));
        }

        /* Анимация нажатия */
        #star.clicked {
            transform: scale(0.95);
        }

        /* Стиль для плавающих очков */
        .floating-score {
            position: absolute;
            font-size: 36px; 
            color: var(--color-secondary);
            opacity: 0;
            pointer-events: none;
            text-shadow: 0 0 8px #ffcc00;
            animation: floatUp 1s ease-out forwards;
            z-index: 10;
        }

        @keyframes floatUp {
            0% { transform: translateY(0); opacity: 1; }
            100% { transform: translateY(-80px); opacity: 0; }
        }

        /* Стилизация полосы энергии */
        #energy-bar-fill {
            transition: width 0.3s ease-out;
            background: linear-gradient(90deg, #FFD700, var(--color-primary)); 
        }

        /* Применяем Aldrich для всех текстовых элементов */
        .font-aldrich {
            font-family: var(--font-main);
        }

        /* Стилизация сообщения об ошибке */
        #status-message {
            background-color: rgba(220, 38, 38, 0.8); 
            border: 1px solid rgba(255, 0, 0, 0.5);
            box-shadow: 0 0 15px rgba(255, 0, 0, 0.6);
        }
